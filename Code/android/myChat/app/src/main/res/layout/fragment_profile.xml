<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:background="#1d1d1d"
    android:paddingBottom="16dp"
    tools:context="com.example.abdelrahmanhesham.mychat.Profile">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        app:cardBackgroundColor="#1d1d1d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="90dp"
                android:id="@+id/photo"
                android:layout_centerHorizontal="true"
                tools:src="@drawable/abdo"
                android:layout_height="90dp" />
            <TextView
                android:id="@+id/tv_name"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/photo"
                tools:text="Name : Abdelrahman Hesham"
                android:layout_marginTop="8dp"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:textColor="@color/main"
                tools:text="Email : adelrahmanh542@gmail.com"
                android:layout_marginTop="8dp"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/tv_phone"
                android:textColor="@color/main"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                tools:text="Phone : 01144352682"
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_email"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/tv_age"
                android:textColor="@color/main"
                android:textSize="17sp"
                tools:text="Age : 20"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_phone"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="@android:color/white"
        android:drawableRight="@drawable/ic_exit"
        android:textAlignment="center"
        android:text="Logout" />

</LinearLayout>
